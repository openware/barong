<!DOCTYPE html>
<html>
  <head>
    <title>Barong</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'web', media: 'all' %>
    <%= domain_stylesheet_tag(domain_asset :stylesheet) %>
    <%= javascript_include_tag 'web' %>
    <%= favicon_link_tag asset_path('favicon.png'), :rel => 'icon', :type =>  'image/png' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body class="devise">
    <%= domain_html_tag(domain_asset :header) %>
    <div class="container-fluid">

      <div class="row justify-content-center">
        <div class="col-xs-10 col-sm-8 col-md-6 col-lg-2">
          <div class="main-logo">
            <%= link_to domain_logo_tag(domain_asset :logo), index_path %>
          </div>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="col-xs-12 col-sm-10 col-md-7 col-lg-4 col-xl-4 mt-5 mb-5">
          <div class="card"><br/>

            <% unless notice.blank? %><span class="alert alert-primary mb-0"><%= notice %></span><% end %>
            <% unless alert.blank? %><span class="alert alert-danger mb-0"><%= alert %></span><% end %>

            <%= yield %>
          <hr/>
          <% if account_signed_in? %>
              <div class="card-footer">
                <div class="text-right">
                  <%= link_to 'Sign out', destroy_account_session_path, method: :delete %>
                </div>
              </div>
          <% end %>
        </div>
      </div>

    </div>
    <%= domain_html_tag(domain_asset :footer) %>
  </body>
</html>
