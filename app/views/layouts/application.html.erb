<!DOCTYPE html>
<html>
  <head>
    <title>Barong</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'web', media: 'all' %>
    <%= domain_stylesheet_tag(domain_asset :stylesheet) %>
    <%= javascript_include_tag 'web' %>
    <%= favicon_link_tag asset_path('favicon.png'), :rel => 'icon', :type =>  'image/png' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body class="devise">
    <%= domain_html_tag(domain_asset :header) %>
    <div class="container-fluid">
      <div class="row justify-content-center">
        <div class="col-xs-10 col-sm-8 col-md-6 col-lg-2">
          <div class="main-logo">
            <%= link_to domain_logo_tag(domain_asset :logo), index_path %>
          </div>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="mt-5 mb-5 mx-4 main-card">

          <div class="card">

            <% unless alert.blank? %>
              <span class="alert alert-danger mb-0">
                <i class="icon icon-cancel-circled"></i> <h3><%= alert %></h3>
              </span>
            <% end %>

            <% unless notice.blank? %>
              <span class="alert alert-success mb-0">
                <i class="icon icon-cancel-circled"></i> <h3><%= notice %></h3>
              </span>
            <% end %>

            <div classs="pt-2">
              <%= yield %>
            </div>

            <% if account_signed_in? %>
              <div class="card-footer py-3 px-5">
                <div class="row">
                  <div class="col text-left">
                    <div class="btn-group">
                      <a href="javascript:void(0)" class="dropdown-toggle text-white" data-toggle="dropdown">
                        Settings
                      </a>
                      <div class="dropdown-menu text-dark">
                        <%= link_to "Change your password", edit_account_registration_path, class:'dropdown-item' %>
                        <!-- <%= link_to 'Enable two factor authentification', security_path, class:'dropdown-item' %> -->
                        <%= link_to 'Upload document', new_document_path, class:'dropdown-item' if current_account.profile %>
                        <%= link_to 'Add phone', new_phone_path, class:'dropdown-item' %>
                      </div>
                    </div>

                  </div>
                  <div class="col text-right">
                    <%= link_to 'Sign out', destroy_account_session_path, method: :delete, class: "text-white" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

        </div>
      </div>
    </div>
    <%= domain_html_tag(domain_asset :footer) %>
  </body>
</html>
