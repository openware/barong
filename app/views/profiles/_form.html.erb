<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row form-group">
    <div class="col-6">
      <%= form.text_field :first_name, id: :profile_first_name, class: "form-control underlined", placeholder: 'First name' %>
    </div>

    <div class="col-6">
      <%= form.text_field :last_name, id: :profile_last_name, class: "form-control underlined", placeholder: 'Last name' %>
    </div>
  </div>

  <div class="field form-group">
    <div class="col-6">
      <%= form.text_field :dob, id: :profile_dob, class: 'datepicker', placeholder: 'Date of birth' %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-6">
      <%= form.text_field :address, id: :profile_address, class: "form-control underlined", placeholder: 'Address' %>
    </div>

    <div class="col-6">
      <%= form.text_field :postcode, id: :profile_postcode, class: "form-control underlined", placeholder: 'Postcode' %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-6">
      <%= form.text_field :city, id: :profile_city, class: "form-control underlined", placeholder: 'City' %>
    </div>

    <div class="col-6">
      <%= form.text_field :country, id: :profile_country, class: "form-control underlined", placeholder: 'Country' %>
    </div>
  </div>

  <div class="container">
    <div class="d-flex justify-content-center">
      <%= form.submit "Next", class: "btn btn-primary btn-block mb-4" %>
    </div>
  </div>
<% end %>
