<div class="container">
  <div class="text-center">
    <h2><span class="text-muted">Verification > </span>Complete your profile</h2>
    <p class="text-muted"><small>Some text to explain what to do comes here</small></p>
  </div>

  <div class="d-flex justify-content-center">
    <div class="steps d-flex justify-content-center py-4">
      <div class="col-4 step-col first">
        <div class="step completed"></div>
        Email
      </div>
      <div class="col-4 step-col">
        <div class="step completed"></div>
        Phone
      </div>
      <div class="col-4 step-col last">
        <div class="step current"></div>
        Identity
      </div>
    </div>
  </div>

<hr>
  <div class="container">
    <%= render 'form', profile: @profile %>
  </div>

</div>
