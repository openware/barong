<div class="row justify-content-center">
  <div class="container-fluid box-shadow mx-3">
    <div class="mb-3">
      <h2 class="title font-weight-bold">Sign in</h2>
    </div>
  </div>

  <div class="container-fluid mx-3 px-5 py-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <div class="row">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'px-1 form-control form-control-lg underlined', placeholder: 'Enter email' %>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: 'off', class: 'px-1 form-control form-control-lg underlined', placeholder: 'Enter password' %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class="row">
            <%= f.label :remember_me do %>
              <%= f.check_box :remember_me, class: 'checkbox' %>
              Remember me
            <% end %>
          </div>
        </div>
      <% end -%>

      <div class="row mt-4">
        <%= f.submit 'Submit', class: 'btn btn-block btn-success col-6' %>
      </div>
    <% end %>
  </div>
</div>
