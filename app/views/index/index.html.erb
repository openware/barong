<div class="row justify-content-center">

  <div class="col-xs-12 col-sm-10 col-md-6 col-lg-4">
    <div class="main-logo">
      <%= image_tag('logo-black.png') %>
    </div>
  </div>
</div>

<div class="row justify-content-center">

  <% if account_signed_in? %>

    <div class="col-xs-12 col-sm-11 col-md-6 mt-5 mb-3">
      <div class="text-center">
        <div class="d-flex justify-content-center">
          <% if current_account.level == 1 %>
            <%= link_to 'Verify your phone', new_phone_path, class: 'btn btn-primary btn-block mb-4' %>
          <% end %>
          <% if current_account.level == 2 && !current_account.profile %>
            <%= link_to 'Verify your identity', new_profile_path, class: 'btn btn-primary btn-block mb-4' %>
          <% end %>
          <% if current_account.profile %>
            <h3>Your account is <%= current_account.profile.state %></h3>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-12">
      <div class="text-center">
        <div class="wrap">
          <h2 class="wrap">Signed in as <%= current_account.email %></h2><br/>
        </div>
        <h5><%= link_to 'Enable 2F authentication', security_path %></h5>
      </div>
    </div>

    <% else %>

      <h2>You are not signed in.</h2>
      <br/>
      <%= link_to 'Sign in', new_account_session_path %> or <%= link_to 'Sign up', new_account_registration_path %>

    <% end %>

</div><br/>
