<div class="container"></div>
  <p id="notice"><%= notice %></p>

  <h1>Documents</h1>

  <table class="table table-bordered table-sm text-center">
    <thead>
      <tr>
        <th>Profile</th>
        <th>Upload</th>
        <th>Upload filename</th>
        <th>Upload content size</th>
        <th>Upload content type</th>
        <th>Doc type</th>
        <th>Doc number</th>
        <th>Doc expire</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @documents.each do |document| %>
        <tr>
          <td><%= document.profile %></td>
          <td><%= document.upload_id %></td>
          <td><%= document.upload_filename %></td>
          <td><%= document.upload_content_size %></td>
          <td><%= document.upload_content_type %></td>
          <td><%= document.doc_type %></td>
          <td><%= document.doc_number %></td>
          <td><%= document.doc_expire %></td>
          <td><%= link_to 'Show', document %></td>
          <td><%= link_to 'Edit', edit_document_path(document) %></td>
          <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Document', new_document_path %>
</div>