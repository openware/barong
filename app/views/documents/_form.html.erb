<%= form_with(model: document, local: true) do |form| %>
  <% if document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
        <% document.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="field col-6">
    <%= form.label :doc_type %>
    <%= form.select(:doc_type, ['passport', 'identity card', 'driver license', 'utility bill'], {id: :document_doc_type}, {class: 'form-control underlined'}) %>
  </div>

    <div class="field form-group col-6">
      <%= form.label :doc_number %>
      <%= form.text_field :doc_number, id: :document_doc_number, class: 'form-control underlined' %>
    </div>
  </div>

  <div class="field form-group">
      <%= form.text_field :doc_expire, id: :document_doc_expire, class: 'datepicker', 'data-date-format': 'yyyy-mm-dd', placeholder: 'Expiry date' %>
  </div>

  <div class="form-group">
    <%= form.label :upload %>
    <%= form.file_field :upload, class: 'form-control underlined' %>
  </div>

  <div class="actions">
    <%= form.submit 'Submit', class: 'btn btn-block btn-primary' %>
  </div>
<% end %>
