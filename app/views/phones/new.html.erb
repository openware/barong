<div class="container">
  <div class="text-center">
    <h2><span class="text-muted">Verification > </span>Add mobile phone</h2>
  </div>

  <div class="d-flex justify-content-center">
    <div class="steps d-flex justify-content-center py-4">
      <div class="col-4 step-col first">
        <div class="step completed"></div>
        Email
      </div>
      <div class="col-4 step-col">
        <div class="step current"></div>
        Phone
      </div>
      <div class="col-4 step-col last">
        <div class="step"></div>
        Identity
      </div>
    </div>
  </div>

<hr>

  <%= form_tag('/phones') do %>

    <div class="form-group">
        <%= label_tag :number %>
      <div class="row">
        <div class="col-3">
          <%= number_field_tag :country_code, nil, class: "form-control underlined", placeholder: "+380" %>
        </div>
        <div class="col-4">
          <%= number_field_tag :number, nil, class: "form-control underlined", placeholder: "00 000 00 00" %>
        </div>
        <div class="col-4">
          <!--<input type="button" class="btn btn-primary" id="send-code-btn" value="Send code" onclick="sendVerificationCode()">-->
          <%=link_to "Send Code", id: "send-code-btn" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= number_field_tag :code, nil, class: "form-control underlined", placeholder: "SMS confirmation code" %>
    </div>

    <div class="d-flex justify-content-center mt-4" id="error"></div>

    <hr class="mb-4 mt-5">

    <div class="container">
      <div class="d-flex justify-content-center">
        <%= submit_tag  "Next", class: "btn btn-primary btn-block mb-4" %>
      </div>
    </div>
  <% end %>
</div>
