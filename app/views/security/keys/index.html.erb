<h1>Keys</h1>

<table class="table table-bordered table-striped table-hover table-sm text-center">
  <thead>
    <tr>
      <th>Label</th>
      <th>Token</th>
      <th>Limit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @keys.each do |key| %>
      <tr>
        <td><%= key.label %></td>
        <td><%= key.token %></td>
        <td><%= key.rake_limit %></td>
        <td><%= link_to 'Destroy', security_key_path(key), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Key', new_security_key_path, class: 'btn btn-default btn-success'%>
