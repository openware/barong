  </div>

  <div class="field row">
    <div class="col-4">
      <%= form.label :title %>
    </div>
    <div class="col-4">
      <%= form.text_field :title, id: :website_title %>
    </div>
  </div>

  <div class="field row">
    <div class="col-4">
      <%= form.label :logo %>
    </div>
    <div class="col-4">
      <%= form.text_field :logo, id: :website_logo %>
    </div>
  </div>

  <div class="field row">
    <div class="col-4">
      <%= form.label :stylesheet %>
    </div>
    <div class="col-4">
      <%= form.text_field :stylesheet, id: :website_stylesheet %>
    </div>
  </div>

  <div class="field row">
    <div class="col-4">
      <%= form.label :header %>
    </div>
    <div class="col-4">
      <%= form.text_area :header, id: :website_header %>
    </div>
  </div>

  <div class="field row">
    <div class="col-4">
      <%= form.label :footer %>
    </div>
    <div class="col-4">
      <%= form.text_area :footer, id: :website_footer %>
