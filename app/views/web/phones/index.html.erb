<div class="container">
  <div class="text-center">
    <h2><span class="text-muted">Verification > </span>Add mobile phone</h2>
    <p class="text-muted"><small>Some text to explain what to do comes here</small></p>
  </div>

  <div class="steps d-flex justify-content-center py-4">
    <div class="col-4 step-col first">
      <div class="step completed"></div>
      Email
    </div>
    <div class="col-4 step-col">
      <div class="step current"></div>
      Phone
    </div>
    <div class="col-4 step-col last">
      <div class="step"></div>
      Identity
    </div>
  </div>
</div>

<hr>

<div class="container">
  <%= form_for(Phone.new) do |f| %>

    <div class="form-group">
        <%= f.label :number %>
      <div class="row">
        <div class="col-4">
          <%= f.number_field :number, class: "form-control underlined", placeholder: "+380" %>
        </div>
        <div class="col-8">
          <%= f.number_field :number, class: "form-control underlined", placeholder: "00 00 00 00 00" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "SMS confirmation code" %>
      <%= f.number_field :number, class: "form-control underlined", placeholder: "Enter code" %>
    </div>

    <div class="d-flex justify-content-center mt-4">
      <%= f.submit "Confirm phone number", class: "btn btn-primary" %>
    </div>

    <div class="text-center mt-3 small">
      Didn't received SMS? <%= link_to "Resend a code now", "#" %>
    </div>

  <% end %>
</div>

<hr class="mb-4 mt-5">

<div class="container">
  <div class="d-flex justify-content-center">
    <%= link_to "Next", "#", class: "btn btn-primary btn-block mb-4" %>
  </div>
</div>
